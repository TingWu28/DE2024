{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/ml-pipeline-executor:latest",
        "./Assignment1/ml_pipeline_trigger"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/ml-pipeline-executor:latest"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud run deploy ml-pipeline-executor --image=gcr.io/$PROJECT_ID/ml-pipeline-executor:latest --region=us-central1 --platform=managed --allow-unauthenticated"
      ]
    }
  ],
  "timeout": "1200s",
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
